generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String    @id @default(cuid())
  name     String
  email    String    @unique
  password String
  expenses Expense[]
  budget   Budget?
}

enum Category {
  FOOD
  TRANSPORT
  SHOPPING
  SUBSCRIPTION
  OTHER
}

model Expense {
  id          String   @id @default(cuid())
  category    Category
  description String
  amount      Float
  date        DateTime
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model Budget {
  id                 String @id @default(cuid())
  foodBudget         Float
  transportBudget    Float
  shoppingBudget     Float
  subscriptionBudget Float
  otherBudget        Float
  user               User   @relation(fields: [userId], references: [id])
  userId             String @unique
}
